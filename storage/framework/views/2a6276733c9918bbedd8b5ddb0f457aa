						<td><?php echo $data_package->hours[$j][$i]; ?><?php echo " hrs"; ?></td>
						<td><?php echo $months[$ind_month]; ?><?php echo "-"; ?><?php echo $year; ?></td>
						<td><?php echo $data_package->percentage[$j][$i]; ?><?php echo "%"; ?></td>
					</tr>
					<?php $ind_month++;
						if ($ind_month==12) {
							$ind_month=0;
							$year++;
						}
					?>
					<?php endfor; ?>
				</table>
